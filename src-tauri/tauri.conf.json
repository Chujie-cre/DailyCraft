{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dailycraft",
  "version": "0.1.2",
  "identifier": "com.chujie.dailycraft",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DailyCraft",
        "width": 1020,
        "height": 700
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$LOCALAPPDATA/DailyCraft/**", "C:/**", "D:/**", "E:/**", "F:/**", "G:/**", "H:/**", "K:/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
